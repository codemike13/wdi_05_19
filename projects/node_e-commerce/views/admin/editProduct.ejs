<!doctype html>
<html lang="en">

<% include ../partials/head %>

<body>

    <% include ../partials/nav %>
    <% for (let err of errors) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= err %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <% } %>

    <% for (let s of success) { %>
    <div class="alert alert-primary alert-dismissible fade show" role="alert">
        <%= s %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <% } %>

    <div class="d-flex justify-content-center container emp-profile">
        <div class="row ">

            <% include ../partials/nav %>

            <div class="col">
                <div class="card" style="width: 18rem;">
                    <a href="/api/products/<%= product._id %>">
                        <img class="card-img-top" src="<%= product.image %>" alt="Card image cap" />
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">Name: <%= product.name %></h5>
                        <p class="card-text">Category: <%= product.cat.name %></p>
                        <p class="card-text">$ <%= product.price %></p>
                        <a href="/api/products/<%= product._id %>" class="btn btn-primary">Shop</a>
                    </div>
                </div>
            </div>
            <form class="form-signin" method="POST" action="../editProduct?_method=PUT">
                <label for="inputName" class="sr-only">Product Name</label>
                <input type="text" id="inputName" class="form-control" placeholder="Product Name" name="inputName"
                    value="">

                <br />
                <label for="inputEmail" class="sr-only">Category</label>
                <input type="text" id="inputCategory" class="form-control" placeholder="Product category"
                    name="category" value="">

                <br />
                <label for="inputAddress" class="sr-only">Price</label>
                <input type="text" id="newId" class="form-control" placeholder="Product Id" name="newId" value="">

                <br />
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="text" id="inputPassword" class="form-control" placeholder="Password" name="password">

                <br />
                <button class="btn btn-lg btn-primary btn-block" type="submit">Update Product</button>

            </form>
        </div>
    </div>

    <% include ../partials/footer %>
</body>

</html>