<div class="jumbotron">
  <div class="container">
    <h1 class="display-3 text-center">Worst place to buy things</h1>
    <form class='form-inline my-2 my-lg-0' action="/api/products/search" method="GET">
      <input type="text" class="form-control mr-ms-2" placeholder="Search" aria-label="Search" name="q">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
  </div>
  <% if (success.length) {%>
  <div class="alert alert-success alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-label>
      <span aria-hidden="true">&times;</span>
    </button>
    <%=success[0] %>
  </div>
  <% } %>
</div>